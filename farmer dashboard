    <script>
        function showContent(section) {
            // Hide all content sections
            document.querySelectorAll('.content-section').forEach((el) => {
                el.style.display = 'none';
            });
            // Show the selected content section
            document.getElementById(section).style.display = 'flex';

            // Remove active class from all buttons
            document.querySelectorAll('.sidebar button').forEach((button) => {
                button.classList.remove('active');
            });
            // Add active class to the clicked button
            event.target.classList.add('active');
        }

        function showSubContent(subSection) {
            // Hide all sub-content sections
            document.querySelectorAll('.sub-content').forEach((el) => {
                el.style.display = 'none';
            });
            // Show the selected sub-content section
            document.getElementById(subSection).style.display = 'flex';

            // Remove active class from all sub-content buttons
            document.querySelectorAll('.contract-dashboard-buttons button').forEach((button) => {
                button.classList.remove('active');
            });
            // Add active class to the clicked button
            event.target.classList.add('active');
        }
    </script>

